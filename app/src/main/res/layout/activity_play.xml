<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="326dp"
        android:layout_height="326dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="36dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/win_vertical_1"
            android:layout_width="36dp"
            android:layout_height="256dp"
            android:layout_marginStart="24sp"
            android:src="@drawable/ic_win_vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/win_horizontal_1"
            android:layout_width="256dp"
            android:layout_height="36dp"
            android:layout_marginTop="24sp"
            android:src="@drawable/ic_win_horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/win_vertical_2"
            android:layout_width="36dp"
            android:layout_height="256dp"
            android:layout_marginStart="108sp"
            android:src="@drawable/ic_win_vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/win_horizontal_2"
            android:layout_width="256dp"
            android:layout_height="36dp"
            android:layout_marginTop="108sp"
            android:src="@drawable/ic_win_horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/win_vertical_3"
            android:layout_width="36dp"
            android:layout_height="256dp"
            android:layout_marginStart="194sp"
            android:src="@drawable/ic_win_vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/win_horizontal_3"
            android:layout_width="256dp"
            android:layout_height="36dp"
            android:layout_marginTop="194sp"
            android:src="@drawable/ic_win_horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/win_diagonal_1"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:src="@drawable/ic_win_diagonal_1"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/win_diagonal_2"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:src="@drawable/ic_win_diagonal_2"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="326dp"
        android:layout_height="326dp"
        android:padding="36sp"
        android:src="@drawable/ic_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="326dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginEnd="12sp">

                <ImageView
                    android:id="@+id/item1_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="72sp"
                android:layout_height="72sp">

                <ImageView
                    android:id="@+id/item2_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginStart="12sp">

                <ImageView
                    android:id="@+id/item3_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item4"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginEnd="12sp">

                <ImageView
                    android:id="@+id/item4_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item5"
                android:layout_width="72sp"
                android:layout_height="72sp">

                <ImageView
                    android:id="@+id/item5_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/item6"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginStart="12sp">

                <ImageView
                    android:id="@+id/item6_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item7"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginEnd="12sp">

                <ImageView
                    android:id="@+id/item7_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item8"
                android:layout_width="72sp"
                android:layout_height="72sp">

                <ImageView
                    android:id="@+id/item8_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/item9"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginStart="12sp">

                <ImageView
                    android:id="@+id/item9_"
                    android:layout_width="72sp"
                    android:layout_height="72sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_player_2"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/frame_circle2"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/icons8_user"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/bebasneue_pro_regular"
        android:text="Player2"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/circleImageView2" />

    <LinearLayout
        android:id="@+id/imageView6"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/circleImageView3"
        app:layout_constraintTop_toTopOf="@+id/circleImageView2">

        <TextView
            android:id="@+id/nbr_win_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_player_1"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="32dp"
        android:background="@drawable/frame_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView3"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="32dp"
        android:src="@drawable/icons8_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/bebasneue_pro_regular"
        android:text="Player1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView3" />

    <LinearLayout
        android:id="@+id/imageView7"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/nbr_win_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/back_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_back" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        android:background="@drawable/frame_circle"
        app:srcCompat="@drawable/icons8_replay" />

</androidx.constraintlayout.widget.ConstraintLayout>